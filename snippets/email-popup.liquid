<!-- HTML Structure -->
<div id="emailPopup" class="email-popup">
  <div class="email-popup-content">
    <span class="close-btn" onclick="closePopup()">&times;</span>
    <h2>Subscribe to Our Newsletter</h2>
    <form action="/contact" method="post">
      <input type="email" name="email" placeholder="Enter your email" required>
      <button type="submit">Subscribe</button>
    </form>
  </div>
</div>

<!-- CSS Styling -->
<style>
  .email-popup {
    display: none; /* Hidden by default */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }
  .email-popup-content {
    background: white;
    padding: 20px;
    border-radius: 5px;
    text-align: center;
    position: relative;
    max-width: 400px;
    width: 90%;
  }
  .close-btn {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 24px;
    cursor: pointer;
  }
  .email-popup input[type="email"] {
    width: 80%;
    padding: 10px;
    margin: 10px 0;
  }
  .email-popup button[type="submit"] {
    padding: 10px 20px;
    background-color: #333;
    color: #fff;
    border: none;
    cursor: pointer;
  }
  .email-popup button[type="submit"]:hover {
    background-color: #555;
  }
</style>

<!-- JavaScript Functionality with Session Control -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (!sessionStorage.getItem("emailPopupShown")) {
      setTimeout(showPopup, 3000); // Show popup after 3 seconds
      sessionStorage.setItem("emailPopupShown", "true");
    }

    function showPopup() {
      document.getElementById("emailPopup").style.display = "flex";
    }

    window.closePopup = function() {
      document.getElementById("emailPopup").style.display = "none";
    }
  });
</script>
